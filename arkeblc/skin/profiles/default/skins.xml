<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="arkeblc.skin">

 <object name="arkeblc_skin_custom_images"
    meta_type="Filesystem Directory View"
    directory="arkeblc.skin:skins/arkeblc_skin_custom_images"/>
 <object name="arkeblc_skin_custom_templates"
    meta_type="Filesystem Directory View"
    directory="arkeblc.skin:skins/arkeblc_skin_custom_templates"/>
 <object name="arkeblc_skin_styles"
    meta_type="Filesystem Directory View"
    directory="arkeblc.skin:skins/arkeblc_skin_styles"/>

 <skin-path name="arkeblc.skin" based-on="Plone Default">
  <layer name="arkeblc_skin_custom_images"
     insert-after="custom"/>
  <layer name="arkeblc_skin_custom_templates"
     insert-after="arkeblc_skin_custom_images"/>
  <layer name="arkeblc_skin_styles"
     insert-after="arkeblc_skin_custom_templates"/>
 </skin-path>

</object>
